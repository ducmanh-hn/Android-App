<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:weightSum="10"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".linear.LinearLayout01">
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:textColor="#333"
        android:background="#6CB35F"
        android:textSize="30sp"
        android:layout_weight="2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <TextView
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="30sp"
            android:text="1"
            android:textColor="@color/white"
            android:background="@color/purple_200"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="30sp"
            android:text="1"
            android:textColor="@color/white"
            android:background="@color/purple_500"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="30sp"
            android:text="2"
            android:textColor="@color/white"
            android:background="@color/teal_200"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="3"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <TextView
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="30sp"
            android:text="3"
            android:background="@color/teal_700"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="30sp"
            android:text="4"
            android:textColor="@color/white"
            android:background="#76497E"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:background="#4D71F4"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <TextView
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="30sp"
            android:text="5"
            android:textColor="@color/white"
            android:background="#F30965"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:textColor="@color/teal_200"
        android:background="#F4CF64"
        android:textSize="30sp"
        android:layout_weight="4"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <TextView
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="30sp"
            android:text="6"
            android:textColor="@color/white"
            android:background="#D56A62"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="30sp"
            android:text="7"
            android:textColor="@color/white"
            android:background="#877D3C"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <TextView
        android:layout_weight="0.7"
            android:gravity="center"
            android:textSize="30sp"
            android:text="8"
            android:textColor="@color/white"
            android:background="#2DAFBF"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

</LinearLayout>